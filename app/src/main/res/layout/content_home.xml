<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".scout.com.br.scout.HomeActivity"
    tools:showIn="@layout/activity_home"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/colorBackground">

        <TextView
            android:id="@+id/new_scout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|top"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="80dp"
            android:clickable="true"
            android:drawableTop="@drawable/ic_scout"
            android:onClick="selecionarOpcao"
            android:text="Novo Scout"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|top"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/new_scout"
            android:layout_marginRight="40dp"
            android:clickable="true"
            android:drawableTop="@drawable/ic_history"
            android:onClick="selecionarOpcao"
            android:text="Histórico"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|top"
            android:layout_alignLeft="@+id/new_scout"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="120dp"
            android:clickable="true"
            android:drawableTop="@drawable/ic_perfil"
            android:onClick="selecionarOpcao"
            android:text="Perfil"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|top"
            android:layout_alignBottom="@+id/perfil"
            android:layout_alignRight="@+id/history"
            android:clickable="true"
            android:drawableTop="@drawable/ic_settings"
            android:onClick="selecionarOpcao"
            android:text="Configurações"
            android:textColor="#000000"
            android:textStyle="bold"/>
    </RelativeLayout>
</LinearLayout>
